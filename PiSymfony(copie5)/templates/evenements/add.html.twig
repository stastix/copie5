{# templates/evenements/add.html.twig #}
{% extends 'base-back.html.twig' %}       

{% block title %}Ajouter un événement{% endblock %}

{%block body%}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.titre) }}
    {{ form_errors(form.titre) }}

    {{ form_row(form.description) }}
    {{ form_errors(form.description) }}

    {{ form_row(form.dateDepart) }}
    {{ form_errors(form.dateDepart) }}

    {{ form_row(form.typeevenement) }}
    {{ form_errors(form.typeevenement) }}

    {{ form_row(form.guideId) }}
    {{ form_errors(form.guideId) }}

    {{ form_row(form.destination) }}
    {{ form_errors(form.destination) }}

    {{ form_row(form.image) }}
    {{ form_errors(form.image) }}

    {{ form_row(form.sponsorevenement) }}
    {{ form_errors(form.sponsorevenement) }}

    {{ form_row(form.prix) }}
    {{ form_errors(form.prix) }}
    <button type="submit">Enregistrer</button>

{{ form_end(form) }}
{% endblock %}

