{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="closest-event mb-4">
                    <h2 class="text-center">Closest Event</h2>
                    {% if closestEvent is defined %}
                        <div class="alert alert-info text-center" role="alert">
                            <strong>{{ closestEvent.getTitre() }}</strong> is the closest event with a price of {{ closestEvent.getPrix() }}.
                        </div>
                    {% else %}
                        <p class="text-center">No upcoming events found.</p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <h2 class="mb-4">Low Budget Events</h2>
                    <canvas id="priceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const data = {{ data|json_encode|raw }};

        const labels = Object.keys(data);
        const prices = Object.values(data);

        const ctx = document.getElementById('priceChart').getContext('2d');
        const priceChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Prix',
                    data: prices,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.5)',
                        'rgba(54, 162, 235, 0.5)',
                        'rgba(255, 206, 86, 0.5)',
                        'rgba(75, 192, 192, 0.5)',
                        'rgba(153, 102, 255, 0.5)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
