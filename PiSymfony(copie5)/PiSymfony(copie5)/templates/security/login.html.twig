{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block h3 %}Sign in{% endblock %}
{% block h4 %}{% endblock %}
{% block buttons %}{% endblock %}

{% block body %}
<section class="contact py-5">
    <div class="container py-lg-5 py-sm-3">
        <h2 class="heading text-capitalize text-center mb-sm-5 mb-4"> Sign In </h2>
        <div class="row justify-content-center"> <!-- Center the form -->
            <div class="col-lg-6 col-md-6 contact-left-form">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
                        <div class="form-group contact-forms">

    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
              </div>

    <label for="inputPassword">Password</label>
                        <div class="form-group contact-forms">

    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
          </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-block sent-butnn" type="submit">
        Sign in
    </button>

    {# Ajout du lien "Forgot Password" au-dessus du champ du mot de passe #}
<div class="mb-3">
      <a href="{{ path('email_verification') }}">Forgot Password?</a>
</form>
          </div>
        </div>
    </div>
</section>
{% endblock %}
