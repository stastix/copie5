{% extends 'base.html.twig' %}

{% block title %}Modify Password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Modify Password for {{ email }}</h2>

        {# Display flash messages if any #}
        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-success">{{ flashMessage }}</div>
        {% endfor %}

        {# Display form errors if any #}
        {% if form1 is defined %}
            <div class="alert alert-danger">
                {{ form_start(form1) }}
                {{ form_errors(form1) }}
                <div class="mb-3">
                    {{ form_label(form1.plainPassword) }}
                    {{ form_widget(form1.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form1.plainPassword) }} {# Display errors for the plainPassword field #}
                </div>
                {{ form_widget(form1.Send, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_end(form1) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
