{% extends 'base-back.html.twig' %}

{% block title %}Avis Client
{% endblock %}

{% block body %}
	<div class="az-content pd-y-20 pd-lg-y-30 pd-xl-y-40">
		<div class="container">
			<div class="az-content-left az-content-left-components">
				<div class="component-item">
					<label>Tables</label>
					<nav class="nav flex-column">
						<a href="{{ path('app_user_index') }}" class="nav-link active">users</a>
					</nav>
				</div>
				<!-- component-item -->
			</div>
			<!-- az-content-left -->
			<div class="az-content-body pd-lg-l-30 d-flex flex-column">
				<div class="az-content-breadcrumb">
					<span>Manage</span>
					<span>users</span>
					<span>Show</span>
				</div>
				<h2 class="az-content-title">
					Show User

				</h2>
				<table class="table">
					<tbody>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>{{ user.roles|join(', ') }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ user.nom }}</td>
						</tr>
						<tr>
							<th>Prenom</th>
							<td>{{ user.prenom }}</td>
						</tr>
						<tr>
							<th>NumeroTelephone</th>
							<td>{{ user.numeroTelephone }}</td>
						</tr>
						<tr>
							<th>DateNaissance</th>
							<td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Genre</th>
							<td>{{ user.genre }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col-4 mb-2 p-2 ">
					<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-info  btn-block">edit</a>

					{{ include('user/_delete_form.html.twig') }}</div>
			{% endblock %}
