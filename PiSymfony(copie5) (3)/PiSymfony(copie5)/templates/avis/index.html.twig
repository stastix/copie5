{% extends 'base-back.html.twig' %}

{% block title %}Avis Client
{% endblock %}

{% block body %}
	<div class="az-content pd-y-20 pd-lg-y-30 pd-xl-y-40">
		<div class="container">
			<div class="az-content-left az-content-left-components">
				<div class="component-item">
					<label>Tables</label>
					<nav class="nav flex-column">
						<a href="{{ path('app_avis_index') }}" class="nav-link active">Avis</a>
					</nav>
				</div>
				<!-- component-item -->
			</div>
			<!-- az-content-left -->
			<div class="az-content-body pd-lg-l-30 d-flex flex-column">
				<div class="az-content-breadcrumb">
					<span>Manage</span>
					<span>Client</span>
					<span>Review</span>
				</div>
				<h2 class="az-content-title">
					List Of Client Review

				</h2>
				<div class="table-responsive">
					<table class="table card-table table-vcenter table-mobile-md text-nowrap datatable">
						<thead>
							<tr>
								<th>Id</th>
								<th>Auteur</th>
								<th>Contenu</th>
								<th>Note</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for avi in avis %}
								<tr>
									<td>{{ avi.id }}</td>
									<td>{{ avi.auteur }}</td>
									<td>{{ avi.contenu }}</td>
									<td>{{ avi.note }}</td>
									<td>
										<form method="post" action="{{ path('app_avis_delete', {'id': avi.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
											<a class="btn btn-success btn-icon" href="{{ path('app_avis_show', {'id': avi.id}) }}">
												<i class="typcn typcn-eye-outline"></i>
											</a>
											<a class="btn btn-info btn-icon" href="{{ path('app_avis_edit', {'id': avi.id}) }}">
												<i class="typcn typcn-document-add"></i>
											</a>

											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
											<div>
												<button class="btn btn-danger btn-icon">
													<i class="typcn typcn-delete-outline"></i>
												</button>
											</div>
										</form>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">
										records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>

			{# <a href="{{ path('app_avis_new') }}">Create new</a> #}
			<div class="ht-40"></div>

		</div>
	</div>
{% endblock %}
